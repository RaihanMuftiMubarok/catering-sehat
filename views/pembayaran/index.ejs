<%- include('../partials/__head.ejs') %>
<body>
<div class="container-scroller">
    <%- include('../partials/__nav.ejs') %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Data Pesanan</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Nama User</th>
                                                <th>Alamat</th>
                                                <th>Total Harga</th>
                                                <th>Tanggal Pesanan</th>
                                                <th>Jumlah Pesanan</th>
                                                <th>Status Pesanan</th>
                                                <th colspan="2">Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < data.length; i++) { %>
                                            <tr>
                                                <th scope="row"><%= (i + 1) %></th>
                                                <td><%= data[i].nama_users %></td>
                                                <td><%= data[i].nama_alamat %></td>
                                                <td><%= data[i].total_harga %></td>
                                                <td><%= (new Date(data[i].tanggal_checkout).getDate()).toString().padStart(2, '0') %>/<%= (new Date(data[i].tanggal_checkout).getMonth() + 1).toString().padStart(2, '0') %>/<%= new Date(data[i].tanggal_checkout).getFullYear() %></td>
                                                <td><%= data[i].total_pesanan %></td>
                                                <td>
                                                    <form action="/pembayaran/update/<%= data[i].id_checkout %>" method="POST">
                                                        <select name="status_pemesanan" class="form-select form-select-sm" onchange="this.form.submit()" >
                                                            <option value="dimasak" <%= data[i].status_pemesanan === 'dimasak' ? 'selected' : '' %>>Dimasak</option>
                                                            <option value="diantar" <%= data[i].status_pemesanan === 'diantar' ? 'selected' : '' %>>Diantar</option>
                                                            <option value="selesai" <%= data[i].status_pemesanan === 'selesai' ? 'selected' : '' %>>Selesai</option>
                                                            <option value="batal" <%= data[i].status_pemesanan === 'batal' ? 'selected' : '' %>>Batal</option>
                                                        </select>
                                                    </form>
                                                </td>

                                                                                       
                                                <td>
                                                    <a href="/pembayaran/detail/<%= data[i].id_users %>/<%= data[i].id_checkout %>" 
                                                       class="btn btn-sm btn-warning">Isi Pesanan</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/__foot.ejs') %>
</body>
