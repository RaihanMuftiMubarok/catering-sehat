                    <!-- Profile Title and Description -->
                    <div class="header">
                        <h3>Profil Saya</h3>
                        <p>Kelola informasi profil Anda untuk mengontrol, melindungi, dan mengamankan akun</p>
                    </div>
                    <!-- Profile Form -->
                    <form action="/updateuserskantin/<%= id %>" method="POST" enctype="multipart/form-data">
                        <div class="row mt-5">
                            <!-- Left Column -->
                            <div class="col-md-6 border-end">
                                <%- include('../partials/__messagess.ejs') %>

                                    <div class="mb-3 row">
                                        <label for="username" class="col-sm-4 col-form-label">Username</label>
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" id="username" name="nama_users"
                                                value="<%= data2[0].nama_users %>">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="name" class="col-sm-4 col-form-label">Name</label>
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" id="name"
                                                name="nama_panggilan_users"
                                                value="<%= data2[0].nama_panggilan_users %>">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="email" class="col-sm-4 col-form-label">Email</label>
                                        <div class="col-sm-7">
                                            <input type="email" class="form-control" id="email" name="email_users"
                                                value="<%= data2[0].email_users %>">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="phone" class="col-sm-4 col-form-label">No. Telepon</label>
                                        <div class="col-sm-7">
                                            <input type="text" class="form-control" id="phone" name="no_telp_users"
                                                value="<%= data2[0].no_telp_users %>">
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Jenis Kelamin</label>
                                        <div class="col-sm-7">
                                            <div>
                                            </div>
                                            <input type="radio" class="form-check-input" name="jenis_kelamin" id="male"
                                                value="Pria" checked>
                                            <label for="male" class="form-check-label">Laki-laki</label>
                                            <input type="radio" class="form-check-input ms-3" name="jenis_kelamin"
                                                id="female" value="Wanita">
                                            <label for="female" class="form-check-label">Wanita</label>
                                        </div>
                                    </div>
                            </div>
                            <!-- Right Column -->
                            <div class="col-md-6 mt-5 text-center">
                                <img src="/images/users/<%= data2[0].gambar_users %>" alt="User Profile"
                                    class="rounded-circle me-2 mb-3" width="100" height="100" id="profileImage">
                                <div class="mb-3">
                                    <label for="formFile" class="custom-file-label border">
                                        <small>Pilih Gambar</small>
                                    </label>
                                    <input class="form-control" type="file" id="formFile" name="gambar_users">
                                </div>
                                <p class="file-info">Ukuran gambar: maks 1MB<br>Format gambar: maks 1MB</p>
                            </div>

                            <script>
                                // Fungsi untuk menampilkan preview gambar yang dipilih
                                function previewImage(event) {
                                    const input = event.target;
                                    const reader = new FileReader();

                                    // Jika file di-upload, maka tampilkan preview
                                    reader.onload = function () {
                                        const profileImage = document.getElementById('profileImage');
                                        profileImage.src = reader.result;
                                    };

                                    // Baca file yang diunggah
                                    if (input.files && input.files[0]) {
                                        reader.readAsDataURL(input.files[0]);
                                    }
                                }

                                // Menambahkan event listener pada input file
                                document.getElementById('formFile').addEventListener('change', previewImage);
                            </script>

                        </div>
                        <!-- Save Button -->
                        <div class="d-grid gap-2 col-2 mx-auto">
                            <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                        </div>
                    </form>
