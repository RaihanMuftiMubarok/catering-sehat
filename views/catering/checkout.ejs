        <script>
            document.querySelector('.checkout-button-1').addEventListener('click', async (e) => {
                e.preventDefault();
                console.log("Button diclick");
        
                // Mengambil data dari item keranjang
                const items = Array.from(document.querySelectorAll('#cart-items tr')).map(row => ({
                    nama_menu: row.querySelector('.nama').textContent,
                    kategori_pesanan: row.querySelector('.opsi').textContent,
                    harga_menu: parseInt(row.querySelector('.harga').textContent.replace('Rp. ', '').replace(/\./g, '')),
                    sub_total: parseInt(row.querySelector('.total-harga span').textContent.replace('Rp. ', '').replace(/\./g, '')),
                    id_pembayaran: row.querySelector('.id-pembayaran').textContent.trim() // Mengambil id_pembayaran dari elemen tersembunyi
                }));
        
                console.log('Items Checkout:', items);
        
                // Mengambil total harga dari halaman
                const totalHarga = parseInt(document.querySelector('#total').textContent.replace('Rp. ', '').replace(/\./g, ''));
        
                // Mengambil ID alamat yang dipilih
                const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
                if (!selectedAddress) {
                    alert('Pilih alamat pengantaran terlebih dahulu');
                    return;
                }
                const id_alamat = selectedAddress.value;
        
                try {
                    const response = await fetch('/catering/checkout/pesanan', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            items,
                            total_harga: totalHarga,
                            id_alamat
                        })
                    });
        
                    // Mengelola hasil redirect langsung dari backend
                    if (response.redirected) {
                        console.log('Redirecting to:', response.url);
                        window.location.href = "/catering/pesanan"; // Ikuti URL redirect dari backend
                    } else {
                        const result = await response.json();
                        console.error('Checkout gagal:', result.message);
                        alert(`Gagal checkout: ${result.message}`);
                    }
                } catch (error) {
                    console.error('Kesalahan saat checkout:', error.message);
                    alert(`Terjadi kesalahan saat checkout: ${error.message}`);
                }
            });
        </script>

<script>
    // Fungsi untuk format angka ke Rupiah
    function formatRupiah(angka) {
        return `Rp. ${angka.toLocaleString('id-ID')}`;
    }

    // Fungsi untuk memperbarui format harga pada elemen tabel
    function formatHargaInTable() {
        // Format harga pada elemen dengan class "harga"
        document.querySelectorAll('.harga').forEach(hargaElement => {
            const rawPrice = parseInt(hargaElement.textContent.replace(/[^\d]/g, ''), 10) || 0;
            hargaElement.textContent = formatRupiah(rawPrice);
        });

        // Format total harga pada elemen dengan class "total-harga"
        document.querySelectorAll('.total-harga span').forEach(totalHargaElement => {
            const rawTotalPrice = parseInt(totalHargaElement.textContent.replace(/[^\d]/g, ''), 10) || 0;
            totalHargaElement.textContent = formatRupiah(rawTotalPrice);
        });
    }

    // Panggil fungsi saat halaman selesai dimuat
    window.onload = function () {
        formatHargaInTable();
    };
</script>

        


