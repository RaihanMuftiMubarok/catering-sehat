                    <tbody id="cart-items">
                        <% items.forEach(item => { %>
                        <tr>
                            <td>
                                <div class="d-flex justify-content-start align-items-center">
                                    <img src="../images/menu/<%= item.gambar_menu %>" class="img-cart rounded"
