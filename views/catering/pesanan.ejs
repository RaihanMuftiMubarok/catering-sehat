                    <!-- Accordion untuk daftar pesanan -->
                    <div class="accordion accordion-flush mt-2" id="pesananAccordion">
                        <!-- Pesanan -->
                        <% for (var i = 0; i < data.length; i++) { %>
                        <!-- Ambil data yang relevan -->
                        <% var filteredData2 = data2.filter(item => item.id_checkout === data[i].id_checkout); %>
                        <% var totalJumlah = 0; %>
                        <% if (filteredData2.length > 0) { %>
                            <% totalJumlah = filteredData2.reduce((sum, item) => sum + item.jumlah, 0); %>
                        <% } %>
                    
                        <div class="accordion-item border mb-3">
                            <h2 class="accordion-header d-flex align-items-center" id="pesanan<%= i %>Header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#pesanan<%= i %>" aria-expanded="false"
                                    aria-controls="pesanan<%= i %>">
                                    <div class="row w-100">
                                        <div class="col-md-3">
                                            <b><small>Pesanan <%= i + 1 %></small></b>
                                        </div>
                                        <div class="col-md-3">
                                            <b><small><%= (new Date(data[i].tanggal_checkout).getDate()).toString().padStart(2, '0') %>/<%= (new Date(data[i].tanggal_checkout).getMonth() + 1).toString().padStart(2, '0') %>/<%= new Date(data[i].tanggal_checkout).getFullYear() %></small></b>
                                        </div>
                                        <div class="col-md-2">
                                            <b><small><%= totalJumlah %> item</small></b>
                                        </div>
                                        <div class="col-md-2">
                                            <b>
                                                <small class="rupiah" data-price="<%= data[i].total_harga %>"></small>
                                            </b>
                                        </div>                                        
                                        <div class="col-md-2 rupiah">
                                            <b><small><%= data[i].status_pemesanan %></small></b>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                    
                            <!-- Accordion Collapse -->
                            <div id="pesanan<%= i %>" class="accordion-collapse collapse"
                                aria-labelledby="pesanan<%= i %>Header" data-bs-parent="#pesananAccordion">
                                <div class="accordion-body">
                    
                                    <% if (filteredData2.length > 0) { %>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Menu</th>
                                                <th>Jumlah</th>
                                                <th>Harga</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var j = 0; j < filteredData2.length; j++) { %>
                                            <tr>
                                                <td>
                                                    <img src="../images/menu/<%= filteredData2[j].gambar_menu %>" alt="Makanan" style="width: 10%; height: 10%;"
                                                        class="img-cart rounded"> 
                                                        <%= filteredData2[j].nama_menu %>
                                                        <%= filteredData2[j].kategori_pesanan %>
                                                </td>
                                                <td><%= filteredData2[j].jumlah %></td>
                                                <td class="rupiah" data-price="<%= filteredData2[j].harga_menu * filteredData2[j].jumlah %>">
                                                    <!-- Harga akan diformat otomatis oleh JavaScript -->
                                                </td>
                                                
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    <% } %>
                    
