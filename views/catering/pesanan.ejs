<script>
    // Fungsi untuk format angka ke format Rupiah
    function formatRupiah(angka) {
        return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(angka).replace(",00", "");
    }

    // Menunggu hingga DOM sepenuhnya dimuat
    document.addEventListener('DOMContentLoaded', function() {
        // Ambil semua elemen dengan kelas 'rupiah'
        let rupiahElements = document.querySelectorAll('.rupiah');
        
        // Untuk tiap elemen, format harga dan tampilkan
        rupiahElements.forEach(function(element) {
            let price = parseFloat(element.getAttribute('data-price')); // Ambil harga dari atribut 'data-price'
            if (!isNaN(price)) {
                element.innerHTML = formatRupiah(price); // Format harga dan tampilkan
            }
        });
    });
</script>

